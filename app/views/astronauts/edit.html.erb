<h2>Update Crew Member</h2>

<form action="/astronauts/<%= @astronaut.id %>" method="post">
<input id="hidden" type="hidden" name="_method" value="patch">
<ul>
  <li><label>Crew Member Name:</label>
  <input id="name" type="text" name="astronaut[name]" value="<%= @astronaut.name %>" /></li>
  <li><label>Weight:</label>
  <input id="weight" type="text" name="astronaut[weight]"  value="<%= @astronaut.weight %>"></li>
  <li><label>Height:</label>
  <input id="height" type="text" name="astronaut[height]" value="<%= @astronaut.height %>"></li>
  <li><label>Bio:</label>
  <input id="bio" type="text" name="astronaut[bio]" value="<%= @astronaut.bio %>"></li>
  <li><label>Nationality:</label>
  <input id="nationality" type="text" name="astronaut[nationality]" value="<%= @astronaut.nationality %>"></li>
  <li><label>Specialty:</label>
  <input id="specialty" type="text" name="astronaut[specialty]" value="<%= @astronaut.specialty %>"></li>
</ul>

<h3>Assign to a Ship</h3>
<%current_user.spaceships.each do |spacecraft|%>
<input type="checkbox" name="astronaut[ship]" id="<%=spacecraft.name%>" value="<%=spacecraft.name%>" <%='checked' if current_user.spaceships.include?(spacecraft)%>> <%=spacecraft.name%></input>
<%end%>
<br>
<input type="Submit" value="Update Crew Member" />
</form>
<form method="post" action="/astronauts/<%= @astronaut.id %>">
<input type="hidden" name="_method" value="Delete" />
<input type="submit" value="Delete Crew Member" />
</form>