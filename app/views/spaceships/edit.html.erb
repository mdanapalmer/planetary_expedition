<h2>Edit Your Space Craft</h2>

<form action="/spaceships/<%= @spaceship.id %>" method="post">
<input id="hidden" type="hidden" name="_method" value="patch">
<ul>
  <li><label>Space Craft Name:</label>
    <input id="name" type="text" name="spaceship[name]" value="<%= @spaceship.name %>" /></li>
  <li><label>Type:</label>
    <input id="ship_type" type="text" name="spaceship[ship_type]" value="<%= @spaceship.ship_type %>"></li>
  <li><label>Speed:</label>
    <input id="speed" type="text" name="spaceship[speed]" value="<%= @spaceship.speed %>"></li>
  <li><label>Cargo:</label>
    <input id="cargo" type="text" name="spaceship[cargo]" value="<%= @spaceship.cargo %>"></li>
</ul>
<h3>Crew Members of <%= @spaceship.name %></h3>
<%current_user.astronauts.each do |astro|%>
  <input type="checkbox" name="spaceship[crew_member]" id="<%=astro.name%>"value="<%=astro.name%>"<%='checked' if current_user.astronauts.include?(astro)%>> <%=astro.name%></input>
<%end%>
<input type="submit" />
</form>
<br>
<br>
<form method="post" action="/spaceships/<%= @spaceship.id %>">
<input type="hidden" name="_method" value="Delete" />
<input type="submit" value="Delete Space Craft" />

<br>
<br>
<a href="/">Return to Console</a>
</form>